{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deleteFilesfolder": "run-script-os",
    "deleteFilesfolder:win32": "if exist compil rmdir compil /q /s",
    "deleteFilesfolder:linux": "rm -rf compil",
    "copyFilesFolder": "npm run deleteFilesfolder && run-script-os",
    "copyFilesFolder:win32": "xcopy /E files compil\\files\\",
    "copyFilesFolder:linux": "mkdir ./compil/files/ -p && cp -a ./files/. ./compil/files/",
    "build": "npm run copyFilesFolder && esbuild server.ts --platform=node --bundle --outdir=compil/ '--external:/files/*'",
    "start": "npm run build && node compil/server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/node": "^18.11.18",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "edgedb": "^1.0.2",
    "esbuild": "^0.17.5",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "node-fetch": "^3.3.0",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.19",
    "run-script-os": "^1.1.6",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.16",
    "@types/nodemailer": "^6.4.7"
  }
}
